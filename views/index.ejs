<body>
  <%- include('partials/_header') %>

  <main>

    <h1>Create a poll</h1>
      <p>To create a poll, please fill the form below!</p>


                  <!-- input here -->
    <div id="poll-form">

        <div id="user-poll">
          <p class="alert-user"></p>
            <label for="'email-text">Enter your email:</label>
            <input type="text" name="email" id="email-text"placeholder='example@email.com'></input>
            <label for="poll-title" >Poll title:</label>
            <input type="text" name="title" id="title-text" placeholder="eg: what you want to eat for dinner tonight?"></input>
        </div>
    </div>

        <!-- option  -->
        <div id="options-title" for="poll-question-1">Options: (minimum two)</div>


  <ol id="options-container">
  </ol>
  <div>
      <button id="add_button" class="addButton">Add option</button>
      <div id="create_button">
        <button class="button_style" role="button">Create</button>
      </div>



  </main>
</body>

</html>

